<%- include("header"); -%>
    <div class="box" id="heading">
      <h1><%=today%></h1>
    </div>
    <div class="box">
        <%newitems.forEach(function(items){%>
          <form action="/delete" method="post">
            <div class="item">
              <input type="checkbox" name="checkbox" value="<%=items._id%>" onChange="this.form.submit()">
              <p><%= items.item %></p>
            </div>
          </form>
        <%});%>
        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="Add New Activities" autocomplete="off">
          <button class="addbutton" type="submit" name="button" value="<%=today%>">+</button>
        </form>
    </div>
<%- include("footer"); -%>
